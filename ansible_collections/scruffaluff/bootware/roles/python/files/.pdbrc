import pathlib as __pdbrc_pathlib


# Load custom PDB functions.
exec((__pdbrc_pathlib.Path.home() / ".pdbrc.py").read_text())

# Set breakpoint and continue.
alias cb tbreak %1;; continue
# Print documentation for object.
alias doc __pdbrc_pager(__pdbrc_doc(%1))
# Open object source code in editor.
alias edit __pdbrc_edit(%*)
# Next and list code.
alias nl next;; list
# Print local variables.
alias pl __pdbrc_pager(__pdbrc_format(locals()))
# Print object state with pager.
alias po __pdbrc_pager(__pdbrc_format(%1))
# Load custom PDB functions.
alias rcload import pathlib as __pdbrc_pathlib; exec((__pdbrc_pathlib.Path.home() / ".pdbrc.py").read_text())
# Step and list code.
alias sl step;; list
