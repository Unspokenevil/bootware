// Configuraion file for Zellij.
//
// For more information, visit
// https://zellij.dev/documentation/configuration.

default_layout "layout"
default_mode "locked"
default_shell r#"{{ lookup('ansible.builtin.vars', user_shell + '_executable' ) }}"#

keybinds clear-defaults=true {
    shared_except "locked" "entersearch" {
        bind "enter" { SwitchToMode "locked"; }
        bind "space" { SwitchToMode "locked"; }
    }
    shared_except "locked" "renametab" "renamepane" {
        bind "space" { SwitchToMode "locked"; }
        bind "ctrl d" { SwitchToMode "locked"; }
    }
    shared_except "entersearch" "locked" "renamepane" "renametab" "tab" {
        bind "t" { SwitchToMode "tab"; }
    }
    shared_except "entersearch" "locked" "renamepane" "renametab" {
        bind "esc" { SwitchToMode "locked"; }
    }
    shared_among "move" "normal" "pane" "resize" "scroll" "tab" {
        bind "o" { SwitchToMode "session"; }
    }
    shared_among "move" "normal" "resize" "prompt" "search" {
        bind "s" { SwitchToMode "scroll"; }
    }
    shared_among "move" "normal" "scroll" "search" "session" {
        bind "r" { SwitchToMode "resize"; }
    }
    shared_among "normal" "resize" "prompt" "scroll" "tab" {
        bind "p" { SwitchToMode "pane"; }
    }
    shared_among "scroll" "search" {
        bind ";" { PageScrollDown; }
        bind "d" { HalfPageScrollDown; }
        bind "j" { PageScrollUp; }
        bind "k" { ScrollDown; }
        bind "l" { ScrollUp; }
        bind "u" { HalfPageScrollUp; }
        bind "down" { ScrollDown; }
        bind "left" { PageScrollUp; }
        bind "pagedown" { PageScrollDown; }
        bind "pageup" { PageScrollUp; }
        bind "right" { PageScrollDown; }
        bind "up" { ScrollUp; }
    }
    entersearch {
        bind "ctrl c" { SwitchToMode "scroll"; }
        bind "esc" { SwitchToMode "scroll"; }
        bind "enter" { SwitchToMode "search"; }
    }
    locked {
        bind "ctrl d" { SwitchToMode "normal"; }
    }
    normal {
        bind ";" { MoveFocusOrTab "right"; }
        bind "[" { PreviousSwapLayout; }
        bind "]" { NextSwapLayout; }
        bind "c" { NewTab; SwitchToMode "locked"; }
        bind "d" { Detach; }
        bind "e" { TogglePaneEmbedOrFloating; SwitchToMode "locked"; }
        bind "f" { ToggleFloatingPanes; SwitchToMode "locked"; }
        bind "j" { MoveFocusOrTab "left"; }
        bind "k" { MoveFocus "down"; }
        bind "l" { MoveFocus "up"; }
        bind "m" { ToggleFocusFullscreen; SwitchToMode "locked"; }
        bind "n" { NewPane; SwitchToMode "locked"; }
        bind "down" { MovePane "down"; }
        bind "left" { MovePane "left"; }
        bind "right" { MovePane "right"; }
        bind "up" { MovePane "up"; }
    }
    pane {
        bind ";" { MoveFocus "right"; }
        bind "c" { SwitchToMode "renamepane"; PaneNameInput 0; }
        bind "e" { TogglePaneEmbedOrFloating; SwitchToMode "locked"; }
        bind "f" { ToggleFloatingPanes; SwitchToMode "locked"; }
        bind "j" { MoveFocus "left"; }
        bind "i" { TogglePanePinned; SwitchToMode "locked"; }
        bind "k" { MoveFocus "down"; }
        bind "l" { MoveFocus "up"; }
        bind "n" { NewPane; SwitchToMode "locked"; }
        bind "m" { ToggleFocusFullscreen; SwitchToMode "locked"; }
        bind "p" { SwitchToMode "normal"; }
        bind "s" { NewPane "stacked"; SwitchToMode "locked"; }
        bind "x" { CloseFocus; SwitchToMode "locked"; }
        bind "z" { TogglePaneFrames; SwitchToMode "locked"; }
        bind "down" { MovePane "down"; }
        bind "left" { MovePane "left"; }
        bind "right" { MovePane "right"; }
        bind "tab" { SwitchFocus; }
        bind "up" { MovePane "up"; }
    }
    renamepane {
        bind "esc" { UndoRenamePane; SwitchToMode "pane"; }
    }
    renametab {
        bind "esc" { UndoRenameTab; SwitchToMode "tab"; }
    }
    resize {
        bind "-" { Resize "Decrease"; }
        bind ";" { Resize "Increase right"; }
        bind ":" { Resize "Decrease right"; }
        bind "+" { Resize "Increase"; }
        bind "J" { Resize "Decrease left"; }
        bind "j" { Resize "Increase left"; }
        bind "K" { Resize "Decrease down"; }
        bind "k" { Resize "Increase down"; }
        bind "L" { Resize "Decrease up"; }
        bind "l" { Resize "Increase up"; }
        bind "r" { SwitchToMode "normal"; }
        bind "down" { Resize "Increase down"; }
        bind "left" { Resize "Increase left"; }
        bind "right" { Resize "Increase right"; }
        bind "up" { Resize "Increase up"; }
    }
    scroll {
        bind "e" { EditScrollback; SwitchToMode "locked"; }
        bind "f" { SwitchToMode "entersearch"; SearchInput 0; }
        bind "s" { SwitchToMode "normal"; }
    }
    search {
        bind "c" { SearchToggleOption "CaseSensitivity"; }
        bind "n" { Search "down"; }
        bind "o" { SearchToggleOption "WholeWord"; }
        bind "p" { Search "up"; }
        bind "w" { SearchToggleOption "Wrap"; }
    }
    session {
        bind "a" {
            LaunchOrFocusPlugin "zellij:about" {
                floating true
                move_to_focused_tab true
            }
            SwitchToMode "locked"
        }
        bind "c" {
            LaunchOrFocusPlugin "configuration" {
                floating true
                move_to_focused_tab true
            }
            SwitchToMode "locked"
        }
        bind "d" { Detach; }
        bind "o" { SwitchToMode "normal"; }
        bind "p" {
            LaunchOrFocusPlugin "plugin-manager" {
                floating true
                move_to_focused_tab true
            }
            SwitchToMode "locked"
        }
        bind "q" { Quit; }
        bind "s" {
            LaunchOrFocusPlugin "zellij:share" {
                floating true
                move_to_focused_tab true
            }
            SwitchToMode "locked"
        }
        bind "w" {
            LaunchOrFocusPlugin "session-manager" {
                floating true
                move_to_focused_tab true
            }
            SwitchToMode "locked"
        }
    }
    tab {
        bind ";" { GoToNextTab; }
        bind "[" { BreakPaneLeft; SwitchToMode "locked"; }
        bind "]" { BreakPaneRight; SwitchToMode "locked"; }
        bind "1" { GoToTab 1; SwitchToMode "locked"; }
        bind "2" { GoToTab 2; SwitchToMode "locked"; }
        bind "3" { GoToTab 3; SwitchToMode "locked"; }
        bind "4" { GoToTab 4; SwitchToMode "locked"; }
        bind "5" { GoToTab 5; SwitchToMode "locked"; }
        bind "6" { GoToTab 6; SwitchToMode "locked"; }
        bind "7" { GoToTab 7; SwitchToMode "locked"; }
        bind "8" { GoToTab 8; SwitchToMode "locked"; }
        bind "9" { GoToTab 9; SwitchToMode "locked"; }
        bind "b" { BreakPane; SwitchToMode "locked"; }
        bind "j" { GoToPreviousTab; }
        bind "n" { NewTab; SwitchToMode "locked"; }
        bind "r" { SwitchToMode "renametab"; TabNameInput 0; }
        bind "s" { ToggleActiveSyncTab; SwitchToMode "locked"; }
        bind "t" { SwitchToMode "normal"; }
        bind "x" { CloseTab; SwitchToMode "locked"; }
        bind "left" { MoveTab "left"; }
        bind "right" { MoveTab "right"; }
        bind "tab" { ToggleTab; }
    }
}

mirror_session true
session_serialization false
serialize_pane_viewport false
show_release_notes false
show_startup_tips false
styled_underlines true

themes {
    default {
        bg 147 161 161
        black 253 246 227
        blue 38 139 210
        cyan 42 161 152
        fg 40 110 160
        green 133 153 0
        magenta 211 54 130
        orange 203 75 22
        red 220 50 47
        white 7 54 66
        yellow 181 137 0
    }
}

ui {
    pane_frames {
        rounded_corners true
    }
}
