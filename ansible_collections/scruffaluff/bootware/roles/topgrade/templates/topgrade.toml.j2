# Topgrade configuration file for updating system packages.
#
# For more infomation, visit
# https://github.com/topgrade-rs/topgrade/blob/main/config.example.toml.

[misc]
assume_yes = true
{% if ansible_system in ["Darwin", "Win32NT"] %}
disable = ["containers", "gem", "git_repos", "helm", "ruby_gems", "system"]
{% else %}
disable = ["containers", "gem", "git_repos", "helm", "ruby_gems"]
{% endif %}
no_retry = true
notify_each_step = false
skip_notify = true
