[
  { "key": "{{ ctrl_key }}+`", "command": "workbench.action.terminal.toggleTerminal" },
  {
    "key": "{{ ctrl_key }}+`",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  { "key": "alt+shift+p", "command": "workbench.action.showCommands" },
  { "key": "{{ ctrl_key }}+shift+p", "command": "workbench.action.showCommands" },
  {
    "key": "{{ ctrl_key }}+shift+]",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "{{ ctrl_key }}+shift+[",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  {
    "key": "{{ ctrl_key }}+shift+t",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  }
]
